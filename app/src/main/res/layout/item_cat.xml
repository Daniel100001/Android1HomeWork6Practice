<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="20dp"
        android:id="@+id/materialcardview_recyclerview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/image_cat"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="1dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/text_status_code"
        app:layout_constraintEnd_toEndOf="@+id/materialcardview_recyclerview"
        app:layout_constraintStart_toStartOf="@+id/materialcardview_recyclerview"
        app:layout_constraintTop_toTopOf="@+id/materialcardview_recyclerview" />

    <TextView
        android:id="@+id/text_status_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:text="text_here"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/image_cat"
        app:layout_constraintStart_toStartOf="@+id/image_cat"
        app:layout_constraintTop_toBottomOf="@+id/materialcardview_recyclerview" />

</androidx.constraintlayout.widget.ConstraintLayout>